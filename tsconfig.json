{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es6"],
    "module": "NodeNext",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "lib",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "test"]
}
