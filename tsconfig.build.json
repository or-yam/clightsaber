{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022"],
		"module": "NodeNext",
		"rootDir": "src",
		"resolveJsonModule": true,
		"outDir": "lib",
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
